<table class="table table-user">
  <h2>User info</h2>
  <thead>
      <tr>
        <% if user.profile_image.attached? %>
          <%= image_tag user.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
	  <tr>
	    <tr>
	  	  <td><%= link_to "Edit", "/users/#{user.id}/edit" %></td>
	  	</tr>
 
  	</tr>
  	  	
    
  </tbody>
</table>